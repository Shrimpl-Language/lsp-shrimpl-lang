{
  "name": "shrimpl",
  "displayName": "Shrimpl",
  "description": "Language support for the Shrimpl language (LSP + syntax).",
  "version": "0.1.4",
  "publisher": "bdt-apex",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shrimpl-Language/lsp-shrimpl-lang.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "shrimpl",
    "education",
    "language",
    "lsp"
  ],
  "icon": "icons/shr.png",
  "galleryBanner": {
    "color": "#071521",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:shrimpl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "shrimpl",
        "aliases": [
          "Shrimpl"
        ],
        "extensions": [
          ".shr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "shrimpl",
        "scopeName": "source.shrimpl",
        "path": "./syntaxes/shrimpl.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Shrimpl",
      "properties": {
        "shrimpl.lsp.path": {
          "type": "string",
          "default": "",
          "description": "Optional override for the Shrimpl language server command (absolute path, workspace-relative path, or executable name on PATH). When empty, the extension uses the bundled language server binary under its 'server/' folder."
        },
        "shrimpl.lsp.debugArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "--log-level",
            "debug"
          ],
          "description": "Additional arguments passed to the Shrimpl language server when running in debug mode."
        },
        "shrimpl.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace level for the Shrimpl language server."
        }
      }
    },
    "iconThemes": [
      {
        "id": "shrimpl-icons",
        "label": "Shrimpl Icons",
        "path": "./icon-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"no lint configured\"",
    "test": "echo \"no tests configured\""
  },
  "files": [
    "out/**",
    "server/**",
    "syntaxes/**",
    "language-configuration.json",
    "icon-theme.json",
    "icons/**",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "license": "MIT"
}
